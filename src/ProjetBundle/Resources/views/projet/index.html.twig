{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet"
          href="{{ asset('bundles/projet/css/style.css') }}">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel='stylesheet' type='text/css'>
{% endblock %}
{% block body %}


    <div class="container">
        <div class="row">

            <p></p>
            <h1>Liste Des Projets</h1>
            <div class="col-md-10 col-md-offset-1">

                <div class="panel panel-default panel-table">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col col-xs-6">
                                <h3 class="panel-title">Liste des Projets</h3>
                            </div>
                            <div class="col col-xs-6 text-right">
                                <a href="{{ path('projet_new') }}" class="btn btn-sm btn-primary btn-create">Nouveau Projet</a>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped table-bordered table-list">
                            <thead>
                            <tr>
                                <th><em class="fa fa-cog"></em></th>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Prix</th>

                            </tr>
                            </thead>
                            <tbody>
                            {% for projet in projets %}
                                <tr>
                                    <td align="center">
                                        <ul>

                                                <a class="btn btn-info" href="{{ path('projet_show', { 'id': projet.id }) }}"><em class="fa fa-eye"></em> </a>


                                                <a class="btn btn-default" href="{{ path('projet_edit', { 'id': projet.id }) }}"><em class="fa fa-pencil"></em></a>
                                            <a class="btn btn-danger" href="{{ path('projet_delete', { 'id': projet.id }) }}"><em class="fa fa-trash"></em></a>

                                        </ul>
                                    </td>
                                    <td><a href="{{ path('projet_show', { 'id': projet.id }) }}">{{ projet.id }}</a></td>
                                    <td>{{ projet.name }}</td>
                                    <td>{{ projet.description }}</td>
                                    <td>{{ projet.prix }}</td>

                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col col-xs-4">Page 1 of 5
                            </div>
                            <div class="col col-xs-8">
                                <ul class="pagination hidden-xs pull-right">
                                    <li><a href="#">1</a></li>
                                    <li><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li><a href="#">4</a></li>
                                    <li><a href="#">5</a></li>
                                </ul>
                                <ul class="pagination visible-xs pull-right">
                                    <li><a href="#">«</a></li>
                                    <li><a href="#">»</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

            </div></div></div>

{% endblock %}
